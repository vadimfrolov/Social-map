<div class="d-flex m-2 p-2 flex-wrap">
  {{#each status}}
  <div class="card m-2" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><a href="/profile/{{this.id}}">{{this.userName}}</a></h5>
      <h6 class="card-subtitle mb-2 text-muted">{{this.price}}</h6>
      <p class="card-text">{{this.text}}</p>
      <p class="card-text">{{this.date}}</p>
      <a href="/edit/{{this.id}}">edit</a>
      <a class="delete" id="{{this.id}}" href="/delete/{{this.id}}">delete</a>
    </div>
  </div>
  {{/each}}
</div>